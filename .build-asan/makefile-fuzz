	log.indxf-gh186 \
	log.indxf-gh189 \
	log.indxf-gh190 \
	log.indxf-crashes25 \
	log.indxf-crashes26 \
	log.indxf-crashes27 \
	log.indxf-crashes28 \
	log.indxf-crashes29 \
	log.indxf-crashes30 \
	log.indxf-crashes31 \
	log.indxf-crashes33 \
	log.indxf-crashes34
RW=	log.rw-crashes7 \
	log.rw-crashes8 \
	log.rw-crashes13 \
	log.rw-crashes14 \
	log.rw-crashes15 \
	log.rw-crashes16 \
	log.rw-crashes32 \
	log.rw-gh178 \
	log.rw-gh307 \
	log.rw-gh309
OUTDXF= log.dxf-gh176 \
	log.dxf-gh183
SVG=    log.svg2-gh179 \
	log.SVG-gh182 \
	log.SVG-gh305
BMP=	log.bmp-gh188
INJSON= log.injson-crashes10 \
        log.injson-crashes18 \
        log.injson-crashes19 \
        log.injson-crashes20 \
        log.injson-crashes21 \
        log.injson-crashes22 \
        log.injson-crashes23 \
        log.injson-crashes24
OUTJSON=log.json-crashes35 \
	log.json-gh306
DWG=    log.dwg-gh304
ADD=    log.add-crashes36
LAYERS= log.layers-gh308

all:
	echo $(wildcard ./crashes*.sh) $(wildcard ./gh*.sh) | parallel -j4
dwg:    $(DWG)
injson: $(INJSON)
indxf:  $(INDXF)
rw:     $(RW)
add:    $(ADD)
outdxf: $(OUTDXF)
svg:    $(SVG)
bmp:    $(BMP)
decode: $(RW) $(OUTDXF) $(SVG) $(BMP) $(OUTJSON) $(DWG)
encode: $(RW) $(INDXF) $(INJSON)
dxf:    $(OUTDXF) $(INDXF)
json:   $(OUTJSON) $(INJSON)

.PHONY: fail

# do it in parallel, so collect all failures beforehand
fail:
	-rm fail 2>/dev/null
	-for l in $(INDXF) $(INJSON) $(RW) $(OUTDXF) $(SVG) $(BMP) $(OUTJSON); do \
	  [ -s "$$l" ] && echo "$$l" >> fail; done
	make -j4 -f makefile-fuzz `cat fail`

log.dwg-gh%: gh%.sh programs/dwgread 
	./$<
log.dxf-gh%: gh%.sh programs/dwg2dxf 
	./$<
